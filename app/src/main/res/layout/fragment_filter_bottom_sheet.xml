<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/dhv_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tombol Range Tanggal -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_range_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Range Tanggal"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/dhv_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_activity_type"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" />

    <!-- Tombol Jenis Aktivitas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_activity_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jenis Aktivitas"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/dhv_pass"
        app:layout_constraintStart_toEndOf="@id/btn_range_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_range_date"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
